{
  "roots": [
    "specs/"
  ],
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "dashboard/unit-testing",
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "text-summary"
  ],
  "collectCoverageFrom": [
    "src/**/**",
    "!**/index.js",
    "!**/app.mount.jsx",
    "!**/appJourney.routes.jsx"
  ],
  "coveragePathIgnorePatterns": [
    "/dist/",
    "/dist-release/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "globals": {
    "webpack": {
      "title": "Application Accelerator React Project",
      "brandName": "",
      "basePath": "/",
      "brandHome": "http://lloydsbank.com/personal.asp",
      "brandPrivacy": "http://www.lloydsbank.com/privacy.asp"
    }
  },
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json"
  ],
  "moduleNameMapper": {
    "^assets(.*)$": "<rootDir>/src/assets$1",
    "^components(.*)$": "<rootDir>/src/components$1",
    "^journeys(.*)$": "<rootDir>/src/journeys$1",
    "^copies(.*)$": "<rootDir>/src/copies$1",
    "^styles(.*)$": "<rootDir>/src/styles$1",
    "^utils(.*)$": "<rootDir>/src/utils$1"
  }
}
